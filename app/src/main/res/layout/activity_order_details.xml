<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderDetails">

    <View
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/details_data_card"
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/details_icon"
        android:layout_margin="10dp"
        android:src="@drawable/list"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp" />

      <View
          android:background="@color/gray_onboard"
          android:layout_width="match_parent"
          android:layout_below="@id/details_icon"
          android:layout_height="1dp"/>

    <TextView
        android:id="@+id/details_table_name"
        android:padding="5dp"
        android:text="Mr. Suyash Shukla"
        android:gravity="center"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:layout_below="@id/details_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/details_table_no"
            android:padding="5dp"
            android:textColor="@color/green"
            android:text="Table No. 6"
            android:gravity="center"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:layout_below="@id/details_table_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/details_table_amount"
        android:padding="5dp"
        android:textColor="@color/red"
        android:text="Rs. 1097"
        android:gravity="center"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:layout_below="@id/details_table_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ListView
        android:id="@+id/details_list"
        android:layout_below="@id/details_data_card"
        android:layout_above="@id/details_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/details_button"
        android:text="COMPLETED"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/curve_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</RelativeLayout>